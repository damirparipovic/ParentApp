<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.parentsupportapp">
    
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ParentSupportApp">
        <activity
            android:name=".childConfig.RemoveActivity"
            android:exported="true" />
        <activity
            android:name=".childConfig.ViewActivity"
            android:exported="true" />
        <activity
            android:name=".childConfig.AddChildActivity"
            android:exported="true" />
        <activity
            android:name=".ChildConfigActivity"
            android:exported="true" />
        <activity
            android:name=".CoinFlipActivity"
            android:exported="true" />
        <activity
            android:name=".TimerActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ParentSupportApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".TimerBroadcastReceiver" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.INPUT_METHOD_CHANGED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>